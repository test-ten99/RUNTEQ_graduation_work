<h2 class="text-center my-4">マイライブ記録</h2>

<div class="container d-flex flex-column align-items-center">
  <% @live_records.each do |record| %>
    <div class="card shadow-sm border-0 rounded-4 p-4 mb-4 text-center" style="background-color: #f8f9fa; max-width: 600px; width: 100%;">
      <div class="card-body">
        <h5 class="card-title fw-bold text-primary mb-3"><%= record.artist.name %></h5>
        <p class="card-text mb-2"><strong>🎤 ライブ名:</strong> <%= record.live_title %></p>
        <p class="card-text mb-2"><strong>📍 会場:</strong> <%= record.location %></p>
        <p class="card-text mb-3"><strong>📅 日付:</strong> <%= record.date.strftime("%Y年%m月%d日") %></p>

        <div class="d-flex justify-content-center flex-wrap gap-2 mt-3">
          <%= link_to "詳細", live_record_path(record), class: "btn btn-sm btn-primary" %>
          <%= link_to "編集", edit_live_record_path(record), class: "btn btn-sm btn-outline-secondary" %>
          <%= link_to "削除", live_record_path(record), method: :delete, data: { confirm: "本当に削除しますか？" }, class: "btn btn-sm btn-outline-danger" %>
        </div>
      </div>
    </div>
  <% end %>
</div>